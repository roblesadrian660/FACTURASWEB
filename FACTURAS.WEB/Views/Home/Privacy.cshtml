@{
    ViewData["Title"] = "Nueva Factura";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 col-xs-12">
                <div class="form-group">
                    <label for="input_NumeroFactura">N° Factura: </label>
                    <div class="input-group">
                        <input type="text" class="k-input inputNumero" id="input_NumeroFactura" style="width: 70%;" />
                    </div>
                </div>
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 col-xs-12">
                <div class="form-group">
                    <label for="combobox_Cliente">Cliente: </label>
                    <div class="input-group">
                        <select id="combobox_Cliente" style="width: 100%;"></select>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ms-auto">
                <div class="form-group">
                    <label >Acciones: </label>
                    <div class="input-group">
                        <button type="button" id="button_Limpiar" class="k-button"  >
                            <span>Limpiar</span>
                        </button>
                        &nbsp;
                        <button type="button" id="button_Guardar" class="k-button">
                            <span>Guardar</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-3 col-xs-12">
                <button type="button" id="button_AgregarProducto" class="k-button" data-bs-toggle="modal" data-bs-target="#Popup_Detalle">
                    <span>Agregar producto</span>
                </button>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-12">
                <div id="grid_FacturaDetalle"></div>
            </div>
        </div>
        <div class="row" style="padding-top: 10px;">
            <div class="col-md-2">
                <label>Sub Total: </label>
            </div>
            <div class="col-md-2">
                <label id="input_SubTotal">0</label>
            </div>
        </div>
        <div class="row" style="padding-top: 10px;">
            <div class="col-md-2">
                <label>Impuestos(19%): </label>
            </div>
            <div class="col-md-2">
                <label id="input_Impuesto">0</label>
            </div>
        </div>
        <div class="row" style="padding-top: 10px;">
            <div class="col-md-2">
                <label>Total: </label>
            </div>
            <div class="col-md-2">
                <label id="input_Total">0</label>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="Popup_Detalle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Agregar producto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-md-3">
                                <label for="combobox_Producto">Producto: </label>
                            </div>
                            <div class="col-md-9">
                                <select id="combobox_Producto" style="width: 50%;"></select>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-md-3">
                                <label>Precio Unitario: </label>
                            </div>
                            <div class="col-md-9">
                                <label id="input_PrecioUnitario" >0</label>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-md-3">
                                <label for="input_CantidadProducto">Cantida: </label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="k-input inputNumero" id="input_CantidadProducto" style="width: 30%;" />
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-md-3">
                                <label>Totales: </label>
                            </div>
                            <div class="col-md-9">
                                <label id="input_TotalesProducto">0</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="button_AgregarProductoGrid">Agregar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/x-kendo-template" id="templateElim">
    <div type="example">
        <span style="cursor:pointer" onclick="EliminarDetalle(this)"  class="k-button">Eliminar</span>
    </div>
</script>
<script src="~/funcionales/home/vistacrearfacturas.js"></script>